<% layout("/layouts/boilerplate.ejs")%>
<script>
const mapToken= '<%=process.env.MAP_API_KEY%>';
</script>
<body><br>
    <h3><%=list.title%></h3><br>
    <div class="row-show">
        <div class="col-11 offset-2">
       
    <div class="card col-10 offset--0">
        <img src="<%=list.image.url%>" class="card-img-top show" alt="..."><br>
  <div class="card-body">
    <p class="card-text">
       <b><%=list.title%></b> <br><br>
       <%=list.description%> <br>
       &#8377; <%=list.price.toLocaleString("en-IN")%> /night<br>
       <%=list.location%> <br>
       <%=list.country%> <br>
       <%=list.category %> <br>
       <p>Owner : <b><%=list.owner.username%></b> <br>
       Email : <b><%=list.owner.email%></b> </p>
     


    </p>
  </div>
    </div>
     </div>
    </div>
<%if(currUser&&currUser._id.equals(list.owner._id)){%>
    <div class="authenticate">
        <form action="/listing/<%=list.id%>/edit"><button class="btn btn-primary">Edit</button></form><br>
    <form method="post" action="/listing/delete/<%=list.id%>?_method=DELETE"><button class="btn btn-danger checkDelete">Delete</button></form><br><br>
   
    </div>
  <% } %>
    <br>
    <%if(currUser){%>
         <hr>
    <div class="col-8 offset-2 mb-9 mt-3" >
    
        <h4>Leave a Review</h4>
        <form action="/listing/<%=list.id%>/reviews" method="post" novalidate class="needs-validation">
<div class="mt-3">
<fieldset class="starability-slot star">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]"value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset></div>


            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please Write a Comment </div>
            </div><br>
            <button class="btn-outline-success btn">Submit</button><br>
        </form>

    <% } %>
       
    <%if(list.reviews.length>0){%> <br>
        <div class="row">
           <hr>
        <h4>All Reviews</h4><br><br>
         <%for(review of list.reviews){%>
           <div class="card-body show-card col-5 mb-3 1">
            <p> <b><i>~ <%=review.author.username%> </i></b> <br>
            <p class="starability-result card-text rating" data-rating="<%=review.rating%>"></p><%=review.comment%> <br><br></p>
           <%if(currUser&&currUser._id.equals(review.author._id)) {%><form action="/listing/<%=list._id%>/reviews/<%=review._id%>?_method=DELETE" method="post"><button class="btn btn-outline-dark">Delete</button></form><%}%></div>
        <%}%>
        </div><br><br>
        <%}%>
        <br>
         <div class="col-8">
          <h4>Where you'll be</h4><br>
        </div>
        <div class="map"><div id="map"></div></div>
       
    </div><br>
    <script src="https://cdn.maptiler.com/maptiler-sdk-js/v1.2.0/maptiler-sdk.umd.min.js"></script>
    <script src="/js/map.js"></script>

</body>
     
      